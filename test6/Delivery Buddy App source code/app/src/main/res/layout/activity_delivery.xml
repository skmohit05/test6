<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2c3e50"
    tools:context="com.example.admin.test3.Delivery"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="PICKUP"
                android:layout_gravity="left"
                android:background="@color/bg_inactive"
                android:textColor="@color/white"
                android:layout_marginRight="1dip"
                android:onClick="getPickup"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="DELIVERY"
                android:layout_gravity="center"
                android:background="@color/bg_active"
                android:textColor="@color/white"
                android:layout_marginRight="1dip"
                android:onClick="getDelivery"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="2dp">
            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Report"
                android:layout_gravity="right"
                android:background="@color/bg_inactive"
                android:textColor="@color/white"
                android:onClick="getDue"
                />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#2c3e50"
        android:dividerHeight="4px"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        >
    </ListView>

</LinearLayout>
